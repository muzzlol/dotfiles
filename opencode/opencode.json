{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "autoshare": false,
  "autoupdate": true,
  "keybinds": {
    "leader": "ctrl+o",
    "messages_line_up": "alt+up",
    "messages_line_down": "alt+down"
  },
  "tui": {
    "scroll_speed": 5,
    "scroll_acceleration": {
      "enabled": false
   }
  },
  "mcp": {
      "exa": {
        "type": "local",
        "command": ["npx", "-y", "exa-mcp-server"],
        "environment": {
          "EXA_API_KEY": "{env:EXA_API_KEY}"
        },
        "enabled": true
      }
    },
    "provider": {
      "anthropic-api": {
        "name": "Anthropic (API)",
        "npm": "@ai-sdk/anthropic",
        "models": {
          "claude-opus-4-6": {
            "name": "Opus"
          }
        },
        "options": {
          "apiKey": "{env:ANT_API_KEY}",
          "headers": {
            "anthropic-beta": "claude-code-20250219,interleaved-thinking-2025-05-14,fine-grained-tool-streaming-2025-05-14"
          }
        }
      }
    }

}
