{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "autoshare": false,
  "autoupdate": true,
  "tui": {
    "scroll_speed": 2,
    "scroll_acceleration": {
      "enabled": false
   }
  },
  "mcp": {
      "exa": {
        "type": "local",
        "command": ["npx", "-y", "exa-mcp-server"],
        "environment": {
          "EXA_API_KEY": "${EXA_API_KEY}"
        },
        "enabled": true
      }
    }
}
