{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "autoshare": false,
  "autoupdate": true,
  "keybinds": {
    "leader": "ctrl+o",
    "messages_line_up": "alt+up",
    "messages_line_down": "alt+down"
  },
  "tui": {
    "scroll_speed": 5,
    "scroll_acceleration": {
      "enabled": false
   }
  },
  "mcp": {
      "exa": {
        "type": "local",
        "command": ["npx", "-y", "exa-mcp-server"],
        "environment": {
          "EXA_API_KEY": "${EXA_API_KEY}"
        },
        "enabled": true
      }
    }
}
